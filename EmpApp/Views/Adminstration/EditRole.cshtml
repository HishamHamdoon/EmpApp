@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>
<form asp-action="EditUsersInRole" asp-controller="Adminstration" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control" />
        <span asp-validation-for="Id"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName"></span>
    </div>
    <a class="btn btn-primary" asp-action="ListRoles" asp-controller="Adminstration">Cancel</a>
    <button type="submit" class="btn btn-primary" asp-action="EditRole" asp-controller="Adminstration">Update</button>

    <div class="card">
        <div class="card-header">
            <h3>Users in This role </h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <p>No user At The moment</p>
            }
        </div>
        <div class="card-footer">

            <a   class="btn btn-danger" asp-action="EditUsersInRole"
                    asp-controller="Adminstration" asp-route-roleId="@Model.Id">
                Add Or Remove Users
            </a>

        </div>
    </div>
</form>
